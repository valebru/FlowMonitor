#componenti da installare
pip
pip install
sudo pip install Flask
sudo pip install -U flask-cors
sudo pip install flask-mysql

#per eseguire il web server
export FLASK_APP=dashboard.py
flask run --host=0.0.0.0 --port 4000



## in /etc/hosts
127.0.0.1   flow-monitor
127.0.0.1   flow-monitor-dashboard



#### put in /etc/hosts of the laptop in which contact the dashboard
<ip-server in which is running the backend>     flow-monitor
<ip-server in which is running the dashboard>   flow-monitor-dashboard
